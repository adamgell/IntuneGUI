<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Intune.Commander.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="550"
             x:Class="Intune.Commander.Desktop.Views.LoginView"
             x:DataType="vm:LoginViewModel">

    <Design.DataContext>
        <vm:LoginViewModel />
    </Design.DataContext>

    <Border Padding="40" MaxWidth="450" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Spacing="16">
            <TextBlock Text="Intune Commander"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8" />

            <TextBlock Text="Connect to your Intune tenant"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource AppTextSecondaryBrush}"
                       Margin="0,0,0,16" />

            <!-- Saved Profiles -->
            <StackPanel Spacing="4">
                <TextBlock Text="Saved Profiles" FontSize="12" />
                <ComboBox ItemsSource="{Binding SavedProfiles}"
                          SelectedItem="{Binding SelectedProfile}"
                          HorizontalAlignment="Stretch"
                          PlaceholderText="Select a profile or create new..."
                          IsEnabled="{Binding !IsBusy}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <Separator />

            <StackPanel Spacing="4">
                <TextBlock Text="Profile Name (optional)" FontSize="12" />
                <TextBox Text="{Binding ProfileName}"
                         Watermark="e.g. Contoso-Prod"
                         IsEnabled="{Binding !IsBusy}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Tenant ID" FontSize="12" />
                <TextBox Text="{Binding TenantId}"
                         Watermark="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
                         IsEnabled="{Binding !IsBusy}" />
                <TextBlock Text="{Binding TenantIdError}"
                           Foreground="{DynamicResource AppErrorTextBrush}" FontSize="11"
                           IsVisible="{Binding TenantIdError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Cloud Environment" FontSize="12" />
                <ComboBox ItemsSource="{Binding AvailableClouds}"
                          SelectedItem="{Binding SelectedCloud}"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding !IsBusy}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Client ID (App Registration)" FontSize="12" />
                <TextBox Text="{Binding ClientId}"
                         Watermark="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
                         IsEnabled="{Binding !IsBusy}" />
                <TextBlock Text="{Binding ClientIdError}"
                           Foreground="{DynamicResource AppErrorTextBrush}" FontSize="11"
                           IsVisible="{Binding ClientIdError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Auth Method" FontSize="12" />
                <ComboBox ItemsSource="{Binding AvailableAuthMethods}"
                          SelectedItem="{Binding SelectedAuthMethod}"
                          HorizontalAlignment="Stretch"
                          IsEnabled="{Binding !IsBusy}" />
            </StackPanel>

            <Expander Header="Where do I find these values?" FontSize="12" Padding="0">
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        CornerRadius="4" Padding="12,8" Margin="0,4,0,0">
                    <StackPanel Spacing="6">
                        <TextBlock FontSize="12" TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">Tenant ID: </Run>
                            <Run>Azure Portal → Azure Active Directory → Overview → Tenant ID</Run>
                        </TextBlock>
                        <TextBlock FontSize="12" TextWrapping="Wrap">
                            <Run FontWeight="SemiBold">Client ID: </Run>
                            <Run>Azure Portal → App Registrations → your app → Application (client) ID</Run>
                        </TextBlock>
                        <TextBlock FontSize="12" TextWrapping="Wrap" Foreground="{DynamicResource AppTextSecondaryBrush}">
                            For Interactive auth, only Tenant ID and Client ID are required.
                            Client Secret is only needed for Client Credentials / service accounts.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Expander>

            <StackPanel Spacing="4" IsVisible="{Binding IsClientSecretVisible}">
                <TextBlock Text="Client Secret" FontSize="12" />
                <TextBox Text="{Binding ClientSecret}"
                         PasswordChar="●"
                         Watermark="Enter client secret value"
                         IsEnabled="{Binding !IsBusy}" />
            </StackPanel>

            <!-- Save / Delete / New / Import -->
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button Content="New"
                        Command="{Binding NewProfileCommand}"
                        MinWidth="80" />
                <Button Content="Save Profile"
                        Command="{Binding SaveProfileCommand}"
                        MinWidth="120" />
                <Button Content="Delete"
                        Command="{Binding DeleteProfileCommand}"
                        MinWidth="80" />
                <Button Content="Import Profiles"
                        Command="{Binding ImportProfilesCommand}"
                        IsEnabled="{Binding !IsBusy}"
                        MinWidth="120" />
            </StackPanel>

            <Button Content="Connect"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Classes="accent"
                    Margin="0,8,0,0" />

            <!-- Device Code instructions -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundAccentBrush}"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4" Padding="12"
                    IsVisible="{Binding IsDeviceCodeMessageVisible}">
                <TextBlock Text="{Binding DeviceCodeMessage}"
                           TextWrapping="Wrap"
                           FontSize="12"
                           FontFamily="Consolas, Courier New, monospace" />
            </Border>

            <!-- Status -->
            <TextBlock Text="{Binding StatusMessage}"
                       HorizontalAlignment="Center"
                       FontSize="12"
                       IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

            <!-- Loading indicator -->
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsBusy}"
                         Margin="0,4,0,0" />

            <!-- Error -->
            <Border Background="{DynamicResource AppErrorBackgroundBrush}" CornerRadius="4" Padding="8"
                    IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{DynamicResource AppErrorTextBrush}"
                           TextWrapping="Wrap"
                           FontSize="12" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IntuneManager.Desktop.ViewModels"
        xmlns:views="using:IntuneManager.Desktop.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="IntuneManager.Desktop.Views.MainWindow"
        x:Name="MainWin"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1100" Height="750"
        MinWidth="900" MinHeight="625">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8,6" MinHeight="36">
            <DockPanel>
                <!-- Right side: Debug Log link + progress bar -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="12"
                            VerticalAlignment="Center" HorizontalAlignment="Right">
                    <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}"
                                 Width="200" Height="12"
                                 Foreground="#00CC55" Background="#224400"
                                 VerticalAlignment="Center"
                                 CornerRadius="6">
                        <ProgressBar.Styles>
                            <Style Selector="ProgressBar:indeterminate">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="INFINITE" PlaybackDirection="Alternate">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="1.0" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </ProgressBar.Styles>
                    </ProgressBar>
                    <Border Background="Transparent" Cursor="Hand" Padding="4,2"
                            PointerPressed="OnDebugLogLinkPressed">
                        <TextBlock Text="Debug Log" FontSize="12"
                                   Foreground="{DynamicResource SystemAccentColor}"
                                   TextDecorations="Underline"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>

                <!-- Left side: Status text + error text -->
                <StackPanel Orientation="Vertical" Spacing="2" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusText}" FontSize="12" />
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF4444" FontSize="11"
                               TextWrapping="Wrap"
                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Panel>
            <!-- Login View (shown when not connected) -->
            <ContentControl Content="{Binding LoginViewModel}"
                            IsVisible="{Binding !IsConnected}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="vm:LoginViewModel">
                        <views:LoginView />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>

            <!-- Connected Content (shown when connected) -->
            <DockPanel IsVisible="{Binding IsConnected}">
                <!-- Toolbar -->
                <Border DockPanel.Dock="Top" Padding="8"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="🔍 Group Lookup" x:Name="GroupLookupButton"
                                    ToolTip.Tip="Find all Intune objects assigned to a group" />
                            <Border Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" Margin="4,2" />
                            <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                            <Button Content="Export Selected" Command="{Binding ExportSelectedCommand}" />
                            <Button Content="Export All" Command="{Binding ExportAllCommand}" />
                            <Button Content="Import" x:Name="ImportButton" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                            <ComboBox ItemsSource="{Binding SwitcherProfiles}"
                                      SelectedItem="{Binding SelectedSwitchProfile}"
                                      MinWidth="180"
                                      VerticalAlignment="Center"
                                      IsEnabled="{Binding !IsBusy}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" />
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Body: Left Nav + Content + Details -->
                <Grid ColumnDefinitions="180,Auto,*,Auto,350">

                    <!-- Left Nav Panel -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            Padding="0,8">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Categories"
                                       FontSize="13" FontWeight="SemiBold"
                                       Margin="12,0,0,8" />
                            <ListBox ItemsSource="{Binding NavCategories}"
                                     SelectedItem="{Binding SelectedCategory}"
                                     Padding="4">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="4,2">
                                            <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Name}" FontSize="13" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Border>

                    <!-- Splitter: Nav | Content -->
                    <GridSplitter Grid.Column="1" Width="4"
                                  Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

                    <!-- Item List (center) -->
                    <DockPanel Grid.Column="2" Margin="8"
                               IsVisible="{Binding !IsOverviewCategory}">

                        <!-- Category header with column chooser -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">
                                <Button Content="Export CSV"
                                        Command="{Binding ExportAppAssignmentsCsvCommand}"
                                        FontSize="12" Padding="8,4"
                                        VerticalAlignment="Center"
                                        IsVisible="{Binding IsAppAssignmentsCategory}" />
                                <Button Content="Export CSV"
                                        Command="{Binding ExportGroupsCsvCommand}"
                                        FontSize="12" Padding="8,4"
                                        VerticalAlignment="Center">
                                    <Button.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                            <Binding Path="IsDynamicGroupsCategory" />
                                            <Binding Path="IsAssignedGroupsCategory" />
                                        </MultiBinding>
                                    </Button.IsVisible>
                                </Button>
                                <Button Content="⋮ Columns"
                                        x:Name="ColumnChooserButton"
                                        FontSize="12" Padding="8,4"
                                        VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='Items'}"
                                       FontSize="16" FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </DockPanel>

                        <!-- Search / filter box -->
                        <TextBox DockPanel.Dock="Top"
                                 Text="{Binding SearchText, Mode=TwoWay}"
                                 Watermark="🔍 Search..."
                                 Margin="0,0,0,8"
                                 Padding="8,6"
                                 FontSize="13" />

                        <!-- Single dynamic DataGrid — columns built in code-behind -->
                        <DataGrid x:Name="MainDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
                    </DockPanel>

                    <!-- Overview Dashboard (spans center + detail columns) -->
                    <views:OverviewView Grid.Column="2" Grid.ColumnSpan="3"
                                        DataContext="{Binding Overview}"
                                        IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).IsOverviewCategory}" />

                    <!-- Splitter: Content | Details -->
                    <GridSplitter Grid.Column="3" Width="4"
                                  IsVisible="{Binding !IsOverviewCategory}"
                                  Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

                    <!-- Detail Pane (right) -->
                    <DockPanel Grid.Column="4" Margin="8"
                               IsVisible="{Binding !IsOverviewCategory}">
                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                            <Button DockPanel.Dock="Right" Content="📋 Copy"
                                    Command="{Binding CopyDetailsToClipboardCommand}"
                                    FontSize="12" Padding="8,3"
                                    VerticalAlignment="Center" />
                            <TextBlock Text="Details"
                                       FontSize="16" FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </DockPanel>

                        <!-- Loading indicator for detail fetch -->
                        <ProgressBar DockPanel.Dock="Top" IsIndeterminate="True"
                                     IsVisible="{Binding IsLoadingDetails}"
                                     Height="2" Margin="0,0,0,4" />

                        <!-- No selection placeholder -->
                        <TextBlock Text="Select an item to view details"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Foreground="Gray" FontSize="14"
                                   x:Name="PlaceholderNoSelection">
                            <TextBlock.IsVisible>
                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                    <Binding Path="SelectedConfiguration" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedCompliancePolicy" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedSettingsCatalogPolicy" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedApplication" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedAppAssignmentRow" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedDynamicGroupRow" Converter="{x:Static ObjectConverters.IsNull}" />
                                    <Binding Path="SelectedAssignedGroupRow" Converter="{x:Static ObjectConverters.IsNull}" />
                                </MultiBinding>
                            </TextBlock.IsVisible>
                        </TextBlock>

                        <!-- ═══════════════════════════════════════════ -->
                        <!-- Device Configuration details               -->
                        <!-- ═══════════════════════════════════════════ -->
                        <ScrollViewer IsVisible="{Binding SelectedConfiguration, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="4">

                                <!-- Section: Properties -->
                                <TextBlock Text="Properties" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel Spacing="10" DataContext="{Binding SelectedConfiguration}">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Name" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Description" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Platform / Type" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedItemTypeName}"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="ID" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Id}" FontSize="11" Opacity="0.8" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Created" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding CreatedDateTime}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Last Modified" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding LastModifiedDateTime}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Version" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Version}" FontSize="12" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Section: Assignments -->
                                <TextBlock Text="Assignments" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="No assignments"
                                                   Foreground="Gray" FontSize="12"
                                                   IsVisible="{Binding !SelectedItemAssignments.Count}" />
                                        <ItemsControl ItemsSource="{Binding SelectedItemAssignments}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="4,3" Margin="0,0,0,4">
                                                        <DockPanel>
                                                            <Border DockPanel.Dock="Left"
                                                                    Background="{DynamicResource SystemAccentColor}"
                                                                    CornerRadius="2" Padding="5,1" Margin="0,2,6,0"
                                                                    VerticalAlignment="Top">
                                                                <SelectableTextBlock Text="{Binding TargetKind}"
                                                                           FontSize="10" Foreground="White" />
                                                            </Border>
                                                            <StackPanel Spacing="1">
                                                                <SelectableTextBlock Text="{Binding Target}"
                                                                           FontSize="12" TextWrapping="Wrap" />
                                                                <SelectableTextBlock Text="{Binding GroupId}"
                                                                           FontSize="10" Foreground="Gray" Opacity="0.7"
                                                                           IsVisible="{Binding GroupId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- ═══════════════════════════════════════════ -->
                        <!-- Compliance Policy details                  -->
                        <!-- ═══════════════════════════════════════════ -->
                        <ScrollViewer IsVisible="{Binding SelectedCompliancePolicy, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="4">

                                <!-- Section: Properties -->
                                <TextBlock Text="Properties" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel Spacing="10" DataContext="{Binding SelectedCompliancePolicy}">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Name" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Description" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Platform / Type" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedItemTypeName}"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="ID" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Id}" FontSize="11" Opacity="0.8" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Created" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding CreatedDateTime}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Last Modified" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding LastModifiedDateTime}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Version" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Version}" FontSize="12" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Section: Assignments -->
                                <TextBlock Text="Assignments" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="No assignments"
                                                   Foreground="Gray" FontSize="12"
                                                   IsVisible="{Binding !SelectedItemAssignments.Count}" />
                                        <ItemsControl ItemsSource="{Binding SelectedItemAssignments}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="4,3" Margin="0,0,0,4">
                                                        <DockPanel>
                                                            <Border DockPanel.Dock="Left"
                                                                    Background="{DynamicResource SystemAccentColor}"
                                                                    CornerRadius="2" Padding="5,1" Margin="0,2,6,0"
                                                                    VerticalAlignment="Top">
                                                                <SelectableTextBlock Text="{Binding TargetKind}"
                                                                           FontSize="10" Foreground="White" />
                                                            </Border>
                                                            <StackPanel Spacing="1">
                                                                <SelectableTextBlock Text="{Binding Target}"
                                                                           FontSize="12" TextWrapping="Wrap" />
                                                                <SelectableTextBlock Text="{Binding GroupId}"
                                                                           FontSize="10" Foreground="Gray" Opacity="0.7"
                                                                           IsVisible="{Binding GroupId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- ═══════════════════════════════════════════ -->
                        <!-- Settings Catalog details                   -->
                        <!-- ═══════════════════════════════════════════ -->
                        <ScrollViewer IsVisible="{Binding SelectedSettingsCatalogPolicy, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="4">

                                <!-- Section: Properties -->
                                <TextBlock Text="Properties" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel Spacing="10" DataContext="{Binding SelectedSettingsCatalogPolicy}">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Name" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Name}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Description" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Platforms" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding Platforms}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Technologies" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding Technologies}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="ID" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Id}" FontSize="11" Opacity="0.8" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Is Assigned" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding IsAssigned}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Role Scope Tags" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding RoleScopeTagIds}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Created" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding CreatedDateTime}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Last Modified" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding LastModifiedDateTime}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Section: Assignments -->
                                <TextBlock Text="Assignments" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="No assignments"
                                                   Foreground="Gray" FontSize="12"
                                                   IsVisible="{Binding !SelectedItemAssignments.Count}" />
                                        <ItemsControl ItemsSource="{Binding SelectedItemAssignments}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="4,3" Margin="0,0,0,4">
                                                        <DockPanel>
                                                            <Border DockPanel.Dock="Left"
                                                                    Background="{DynamicResource SystemAccentColor}"
                                                                    CornerRadius="2" Padding="5,1" Margin="0,2,6,0"
                                                                    VerticalAlignment="Top">
                                                                <SelectableTextBlock Text="{Binding TargetKind}"
                                                                           FontSize="10" Foreground="White" />
                                                            </Border>
                                                            <StackPanel Spacing="1">
                                                                <SelectableTextBlock Text="{Binding Target}"
                                                                           FontSize="12" TextWrapping="Wrap" />
                                                                <SelectableTextBlock Text="{Binding GroupId}"
                                                                           FontSize="10" Foreground="Gray" Opacity="0.7"
                                                                           IsVisible="{Binding GroupId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- ═══════════════════════════════════════════ -->
                        <!-- Application details                        -->
                        <!-- ═══════════════════════════════════════════ -->
                        <ScrollViewer IsVisible="{Binding SelectedApplication, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="4">

                                <!-- Section: Properties -->
                                <TextBlock Text="App Information" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           Margin="0,0,0,6" />
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                    <StackPanel Spacing="10" DataContext="{Binding SelectedApplication}">
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Name" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Description" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="App Type" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedItemTypeName}"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Platform" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding $parent[ScrollViewer].((vm:MainWindowViewModel)DataContext).SelectedItemPlatform}"
                                                           FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="ID" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Id}" FontSize="11" Opacity="0.8" />
                                        </StackPanel>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Publisher" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding Publisher}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Developer" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding Developer}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Spacing="2">
                                                <TextBlock Text="Owner" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding Owner}" FontSize="12" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Spacing="2">
                                                <TextBlock Text="Featured" FontSize="11" Foreground="Gray" />
                                                <SelectableTextBlock Text="{Binding IsFeatured}" FontSize="12" />
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Notes" FontSize="11" Foreground="Gray" />
                                            <SelectableTextBlock Text="{Binding Notes}" TextWrapping="Wrap" FontSize="12" />
                                        </StackPanel>
                                        <StackPanel Spacing="2">
                                            <TextBlock Text="Information URL" FontSize="11" Foreground="Gray" />
